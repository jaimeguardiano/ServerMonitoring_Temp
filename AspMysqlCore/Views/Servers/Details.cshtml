@model AspMysqlCore.Models.Servers
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Server Details</h2>
<hr />

<div class="form-group">
    <div class="row">
        <div class="col-sm-1">
            <label asp-for="Name" ></label>
        </div>
        <div class="col-sm-3">
            <input asp-for="Name" disabled class="form-control"/>
        </div>
    </div>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-sm-1" style="padding-right:3px;">
            <label asp-for="ip_address"></label>
        </div>
        <div class="col-sm-3">
            <input asp-for="ip_address" disabled class="form-control" />
        </div>
    </div>
</div>

<div class="form-group">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-success">Back To List</a>
</div>