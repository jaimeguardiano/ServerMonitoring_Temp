@model AspMysqlCore.Models.Servers
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit Server</h2>
<hr />

<form asp-action="Edit">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1" style="padding-right:3px;">
                    <label asp-for="ip_address"></label>
                </div>
                <div class="col-sm-3">
                    <input asp-for="ip_address" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="ip_address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back To List</a>
        </div>
    </div>
</form>

